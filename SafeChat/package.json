{
  "name": "safechat-x",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "setup": "npm install && cd client && npm install && cd ../server && npm install",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}